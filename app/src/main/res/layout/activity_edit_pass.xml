<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".EditPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_purple"
            android:gravity="center"
            android:text="비밀번호 변경"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>
    <EditText
        android:id="@+id/presentPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint = "현재 비밀번호"
        />

    <EditText
        android:id="@+id/PassToReplace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"

        android:hint = "새 비밀번호"/>

    <EditText
        android:id="@+id/PassToReplaceConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="새 비밀번호 확인"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:onClick = "Edit"
            android:id="@+id/B_Edit_Pass"
            android:text = "변경"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="Cancel"
            android:id="@+id/B_cancel_Edit_Pass"
            android:text = "닫기"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>